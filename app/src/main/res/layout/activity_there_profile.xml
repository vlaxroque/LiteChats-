<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ThereProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/coverIv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#79B577">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            android:src="@drawable/ic_baseline_person_pin_24"
            android:layout_width="100dp"
            app:c_border="true"
            app:c_border_color="@color/black"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/universityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/courseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/followingTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He is already following you"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/followBtn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Follow"
                    android:background="@drawable/shape_rect02"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/unfollowBtn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="UnFollow"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:background="@drawable/shape_rect02"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_postsThere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>